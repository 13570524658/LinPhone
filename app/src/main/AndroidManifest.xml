<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.zhengyuesoftware.linphone">
    <!--网络权限-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--改变网络状态(android.permission.CHANGE_NETWORK_STATE，改变网络状态如是否能联网)-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--获取WiFi状态(android.permission.ACCESS_WIFI_STATE，获取当前WiFi接入的状态以及WLAN热点的信息)-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--改变WiFi状态(android.permission.CHANGE_WIFI_STATE，改变WiFi状态)-->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <!--拍照权限(android.permission.CAMERA，允许访问摄像头进行拍照)-->
    <uses-permission android:name="android.permission.CAMERA" />
    <!--使用闪光灯(android.permission.FLASHLIGHT，允许访问闪光灯)-->
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <!--唤醒锁定(android.permission.WAKE_LOCK，允许程序在手机屏幕关闭后后台进程仍然运行)-->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--使用振动(android.permission.VIBRATE，允许振动)-->
    <uses-permission android:name="android.permission.VIBRATE" />


    <!--拨打电话(android.permission.CALL_PHONE，允许程序从非系统拨号器里输入电话号码)-->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <!--通话权限(android.permission.CALL_PRIVILEGED，允许程序拨打电话，替换系统的拨号器界面) -->
    <uses-permission
        android:name="android.permission.CALL_PRIVILEGED" tools:ignore="ProtectedPermissions" />
    <!--修改电话状态(android.permission.MODIFY_PHONE_STATE，修改电话状态，如飞行模式，但不包含替换系统拨号器界面)-->
    <uses-permission
        android:name="android.permission.MODIFY_PHONE_STATE" tools:ignore="ProtectedPermissions" />
    <!--处理拨出电话(android.permission.PROCESS_OUTGOING_CALLS，允许程序监视，修改或放弃播出电话)-->
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />
    <!--读取电话状态(android.permission.READ_PHONE_STATE，访问电话状态)-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!--读取通话记录(android.permission.READ_CALL_LOG，读取通话记录)-->
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <!--呼出电话的监听(android.permission.PROCESS_OUTGOING_CALLS，去电监听)-->
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />


    <!--读取短信内容(android.permission.READ_SMS，读取短信内容)-->
    <uses-permission android:name="android.permission.READ_SMS" />
    <!--接收短信(android.permission.RECEIVE_SMS，接收短信)-->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <!--发送短信(android.permission.SEND_SMS，发送短信)-->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />



    <!--读取联系人(android.permission.READ_CONTACTS，允许应用访问联系人通讯录信息)-->
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <!--写入联系人(android.permission.WRITE_CONTACTS，写入联系人，但不可读取)-->
    <uses-permission android:name="android.permission.READ_CALL_LOG" />

    <!--读取日程提醒(android.permission.READ_CALENDAR，允许程序读取用户的日程信息)-->
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <!--写入日程提醒(android.permission.WRITE_CALENDAR，写入日程，但不可读取)-->
    <uses-permission android:name="android.permission.READ_CALENDAR" />


    <!--屏幕截图(android.permission.READ_FRAME_BUFFER，读取帧缓存用于屏幕截图)-->
    <uses-permission
        android:name="android.permission.READ_FRAME_BUFFER" tools:ignore="ProtectedPermissions" />

    <!--录音(android.permission.RECORD_AUDIO，录制声音通过手机或耳机的麦克)-->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!--修改声音设置(android.permission.MODIFY_AUDIO_SETTINGS，修改声音设置信息)-->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />



    <!--读取权限(android.permission.READ_CONTACTS，必要添加读取的权限了，写权限已经包含了读权限了)-->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!--写入权限(android.permission.WRITE_CONTACTS，必要添加读取的权限了，写权限已经包含了读权限了)-->
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <!--程序可以读取设备外部存储空间(android.permission.READ_EXTERNAL_STORAGE，程序可以读取设备外部存储空间（内置SDcard和外置SDCard）的文件)-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!--程序可以写入设备外部存储空间(android.permission.READ_EXTERNAL_STORAGE，程序可以写入设备外部存储空间（内置SDcard和外置SDCard）的文件)-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />



    <!--获取错略位置(android.permission.ACCESS_COARSE_LOCATION，通过WiFi或移动基站的方式获取用户错略的经纬度信息，定位精度大概误差在30~1500米)-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!--获取获取精确位置(android.permission.ACCESS_FINE_LOCATION，通过GPS芯片接收卫星的定位信息，定位精度达10米以内)-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!--系统设置权限(android.permission.WRITE_SETTINGS)-->
    <uses-permission android:name="android.permission.WRITE_SETTINGS" tools:ignore="ProtectedPermissions" />

    <!--读取系统日志(android.permission.READ_LOGS，读取系统底层日志-->
    <uses-permission android:name="android.permission.READ_LOGS" tools:ignore="ProtectedPermissions" />

    <!--删除文件(android.permission.MOUNT_UNMOUNT_FILESYSTEMS，删除文件-->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" tools:ignore="ProtectedPermissions" />
    <!--允许程序清除用户数据(android.permission.CLEAR_APP_USER_DATA，允许程序清除用户数据-->
    <uses-permission android:name="android.permission.CLEAR_APP_USER_DATA" tools:ignore="ProtectedPermissions" />
    <!--允许程序清除应用缓存(android.permission.CLEAR_APP_CACHE，允许程序使用SIP视频服务)-->
    <uses-permission android:name="android.permission.CLEAR_APP_CACHE" tools:ignore="ProtectedPermissions" />

    <!--使用SIP视频(android.permission.USE_SIP，允许程序使用SIP视频服务)-->
    <uses-permission android:name="android.permission.USE_SIP" />
    <!--通知栏-->
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />
    <!--系统锁屏-->
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <!-- 9.0后前台服务需要申请权限 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".kotlin.App"
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LinPhone"
        tools:targetApi="n">
        <activity android:name=".kotlin.window.ui.start_module.start_window.view.activity.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>